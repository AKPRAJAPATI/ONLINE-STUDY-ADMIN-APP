<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Application.pdf.addPdfActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45hsdp"
            android:elevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userName_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_7hsdp"
                        android:gravity="center_vertical"

                        android:text="Add Pdf"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </Toolbar>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/pdfViewImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200hsdp"
        android:layout_margin="@dimen/_10hsdp"
        android:src="@drawable/pdf"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:id="@+id/pdfName"
        android:text="Pdf Name"
        android:layout_margin="@dimen/_10hsdp"
        android:textSize="@dimen/_14font_ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/pdfViewImage"
        app:layout_constraintStart_toStartOf="@+id/pdfViewImage"
        app:layout_constraintTop_toBottomOf="@+id/pdfViewImage" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7hsdp"
        android:layout_marginTop="124dp"
        app:cardCornerRadius="@dimen/_7hsdp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toBottomOf="@+id/pdfName"
        tools:layout_editor_absoluteX="9dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_7hsdp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/videoName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7hsdp"
                android:layout_marginTop="@dimen/_7hsdp"
                android:layout_marginRight="@dimen/_7hsdp"
                android:layout_marginBottom="@dimen/_7hsdp"
                android:background="@drawable/edt"
                android:fontFamily="serif"
                android:hint="Day 1,2,3"
                android:padding="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/choosePdf"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32hsdp"
                android:layout_margin="@dimen/_7hsdp"
                android:background="@drawable/btn_like"
                android:fontFamily="serif"
                android:text="Choose Pdf"
                android:textColor="#FBFBFB"
                android:textSize="@dimen/_15hsdp"


                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/uploadPdf"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32hsdp"
                android:layout_margin="@dimen/_7hsdp"
                android:background="@drawable/btn_like"
                android:fontFamily="serif"
                android:text="Upload Pdf"
                android:textColor="#FBFBFB"
                android:textSize="@dimen/_15hsdp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>