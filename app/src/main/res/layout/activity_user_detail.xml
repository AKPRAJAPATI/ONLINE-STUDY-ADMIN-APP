<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Application.UserDetailActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="9dp">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45hsdp"
            android:elevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userProfile_AppLogo"
                    android:layout_width="@dimen/_40hsdp"
                    android:layout_height="@dimen/_40hsdp"
                    android:layout_gravity="center_vertical"
                    android:padding="2dp"
                    android:src="@drawable/mr_rounded" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userName_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_7hsdp"
                        android:gravity="center_vertical"
                        android:text="@string/my_app_name"
                        android:textSize="@dimen/_14hsdp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!--                <ImageView-->
                <!--                    android:id="@+id/menu_icon"-->
                <!--                    android:layout_width="40dp"-->
                <!--                    android:layout_height="40dp"-->
                <!--                    android:layout_gravity="center_vertical"-->
                <!--                    android:layout_marginRight="10dp"-->
                <!--                    android:padding="5dp"-->
                <!--                    android:src="@drawable/menu" />-->
            </LinearLayout>
        </Toolbar>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_7hsdp"
            app:cardCornerRadius="@dimen/_5hsdp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45hsdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/goto_profile"
                    android:layout_width="@dimen/_20hsdp"
                    android:layout_height="@dimen/_20hsdp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/_7hsdp"
                    android:rotation="180"
                    android:src="@drawable/arroww"
                    app:tint="#A182E8" />

                <TextView
                    android:id="@+id/myProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_7hsdp"
                    android:gravity="center_vertical"
                    android:text="Profile"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_7hsdp"
                app:cardCornerRadius="@dimen/_5hsdp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45hsdp"
                    android:orientation="horizontal">

                    <ImageView
                        app:tint="#A182E8"
                        android:id="@+id/goto_uploadVideo"
                        android:layout_width="@dimen/_20hsdp"
                        android:layout_height="@dimen/_20hsdp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_7hsdp"
                        android:rotation="180"
                        android:src="@drawable/arroww" />

                    <TextView
                        android:id="@+id/uploadVideo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_7hsdp"
                        android:gravity="center_vertical"
                        android:text="Create Course list"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_7hsdp"
                app:cardCornerRadius="@dimen/_5hsdp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45hsdp"
                    android:orientation="horizontal">

                    <ImageView
                        app:tint="#A182E8"
                        android:id="@+id/goto_settings"
                        android:layout_width="@dimen/_20hsdp"
                        android:layout_height="@dimen/_20hsdp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_7hsdp"
                        android:rotation="180"
                        android:src="@drawable/arroww" />

                    <TextView
                        android:id="@+id/settings_"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_7hsdp"
                        android:gravity="center_vertical"
                        android:text="Settings"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_7hsdp"
                app:cardCornerRadius="@dimen/_5hsdp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45hsdp"
                    android:orientation="horizontal">

                    <ImageView
                        app:tint="#A182E8"
                        android:id="@+id/goto_logout"
                        android:layout_width="@dimen/_20hsdp"
                        android:layout_height="@dimen/_20hsdp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_7hsdp"
                        android:rotation="180"
                        android:src="@drawable/arroww" />

                    <TextView
                        android:id="@+id/logoutSystem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_7hsdp"
                        android:gravity="center_vertical"
                        android:text="Log Out"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>