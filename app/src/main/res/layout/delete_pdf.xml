<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/TrackSelectionDialogThemeOverlay"
    android:layout_width="@dimen/_200hsdp"
    android:layout_height="@dimen/_250hsdp"
    app:cardElevation="@dimen/_5hsdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_190hsdp"
            android:src="@drawable/pdf2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5hsdp"
                android:layout_weight="1"
                android:elevation="@dimen/_5hsdp"
                app:cardCornerRadius="@dimen/_5hsdp"
                app:cardElevation="@dimen/_5hsdp">

                <TextView
                    android:id="@+id/yesbtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Yes"
                    android:textSize="19sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5hsdp"
                android:layout_weight="1"
                android:elevation="@dimen/_5hsdp"
                app:cardCornerRadius="@dimen/_5hsdp"
                app:cardElevation="@dimen/_5hsdp">

                <TextView
                    android:id="@+id/nobtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="No"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>