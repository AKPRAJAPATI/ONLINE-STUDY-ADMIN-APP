<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Delete_Database.Sliders.addSlidersActivity">

    <ImageView
        android:id="@+id/sliderImage"
        android:layout_width="0dp"
        android:layout_height="@dimen/_200hsdp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7hsdp"
        app:cardCornerRadius="@dimen/_7hsdp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="@+id/sliderImage"
        app:layout_constraintStart_toStartOf="@+id/sliderImage"
        app:layout_constraintTop_toBottomOf="@+id/sliderImage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_7hsdp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chooseSliderImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32hsdp"
                android:layout_margin="@dimen/_7hsdp"
                android:background="@drawable/btn_like"
                android:fontFamily="serif"
                android:text="Choose sliders"
                android:textColor="#FBFBFB"
                android:textSize="@dimen/_15hsdp"


                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/uploadSliders"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32hsdp"
                android:layout_margin="@dimen/_7hsdp"
                android:background="@drawable/btn_like"
                android:fontFamily="serif"
                android:text="Upload Sliders"
                android:textColor="#FBFBFB"
                android:textSize="@dimen/_15hsdp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>