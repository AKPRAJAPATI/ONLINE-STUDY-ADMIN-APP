<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardCornerRadius="@dimen/_7hsdp"
    android:layout_marginLeft="@dimen/_7hsdp"
    android:layout_marginRight="@dimen/_7hsdp"
    android:layout_marginTop="@dimen/_5hsdp"
    android:layout_marginBottom="@dimen/_5hsdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5hsdp"
            android:padding="2dp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:cardCornerRadius="@dimen/_7hsdp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/playback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/content_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10hsdp"
                    android:layout_marginTop="@dimen/_10hsdp"
                    android:layout_marginBottom="@dimen/_10hsdp"
                    android:gravity="center"
                    android:src="@drawable/ic_play_circle"
                    android:textAlignment="center"
                    android:textColor="#E4E7F4"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/content_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7hsdp"
                    android:fontFamily="serif"
                    android:text="Welcome to the course"
                    android:textColor="#565656"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="@+id/content_number"
                    app:layout_constraintStart_toEndOf="@+id/content_number"
                    app:layout_constraintTop_toTopOf="@+id/content_number" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40hsdp"
            android:layout_margin="@dimen/_5hsdp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:cardCornerRadius="@dimen/_7hsdp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_5hsdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/updateBt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30hsdp"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:src="@drawable/edit"
                    android:textAlignment="center"
                    android:textColor="#E4E7F4"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/deleteBt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30hsdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/ic_baseline_delete_forever_24"
                    android:textAlignment="center"
                    android:textColor="#E4E7F4"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>
